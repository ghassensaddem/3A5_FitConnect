<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Liste des Catégories</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nom</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for categorie in categorie_activities %}
                    <tr>
                        <td>{{ categorie.idCategorie }}</td>
                        <td>{{ categorie.nomCategorie }}</td>
                        <td>{{ categorie.description|slice(0, 50) }}{% if categorie.description|length > 50 %}...{% endif %}</td>
                        <td class="d-flex">
                            <a href="{{ path('app_categorie_show', {'idCategorie': categorie.idCategorie}) }}" 
                               class="btn btn-info btn-circle btn-sm mr-2"
                               title="Voir détails">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a href="{{ path('app_categorie_edit', {'idCategorie': categorie.idCategorie}) }}" 
                               class="btn btn-warning btn-circle btn-sm mr-2"
                               title="Modifier">
                                <i class="fas fa-edit"></i>
                            </a>
                            <form method="post" 
                                  action="{{ path('app_categorie_delete', {'idCategorie': categorie.idCategorie}) }}"
                                  onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ categorie.idCategorie) }}">
                                <button class="btn btn-danger btn-circle btn-sm" title="Supprimer">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="4" class="text-center text-muted">Aucune catégorie trouvée</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>