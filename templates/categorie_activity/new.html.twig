{% extends 'base.html.twig' %}

{% block title %}Ajouter une Catégorie{% endblock %}

{% block body %}
<div class="main-content">
    <div class="bg-fullscreen"></div>
    <div class="overlay"></div>

    <div class="container centered-form">
        <div class="form-container">
            <div class="text-center">
                <h1 class="h4 text-gray-900 mb-4">Ajouter une Catégorie</h1>
            </div>
            {{ form_start(form, {'attr': {'class': 'user'}}) }}
                <div class="form-group">
                    {{ form_label(form.nomCategorie, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.nomCategorie) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.description, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.description) }}
                </div>
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary btn-user px-4 py-2">
                        Ajouter
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}