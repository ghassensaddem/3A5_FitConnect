{% extends 'base.html.twig' %}

{% block title %}Modifier Catégorie - FitConnect{% endblock %}

{% block body %}
<div class="main-content">
    <div class="bg-fullscreen"></div>
    <div class="overlay"></div>

    <div class="container centered-form">
        <div class="form-container">
            <div class="text-center">
                <h1 class="h4 text-gray-900 mb-4">Modifier Catégorie</h1>
            </div>
            
            {{ form_start(form, {'attr': {'class': 'user'}}) }}
                <div class="form-group">
                    {{ form_label(form.nomCategorie, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.nomCategorie, {'attr': {
                        'class': 'form-control form-control-user',
                        'placeholder': 'Nom de la catégorie'
                    }}) }}
                    {{ form_errors(form.nomCategorie) }}
                </div>
                
                <div class="form-group">
                    {{ form_label(form.description, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.description, {'attr': {
                        'class': 'form-control form-control-user',
                        'rows': 4,
                        'placeholder': 'Description'
                    }}) }}
                    {{ form_errors(form.description) }}
                </div>
                
                <div class="d-flex justify-content-between mt-4">
                    <a href="{{ path('app_categorie_list') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left mr-2"></i> Retour
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save mr-2"></i> Enregistrer
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}