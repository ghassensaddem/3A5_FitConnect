    <th>Id</th>
    <th>seanceid</th>
    <th>commentaire</th>
    <th>note</th>
    <th>actions</th>
</tr>
</thead>
<tbody>
{% for avi in avis %}
    <tr>
        <td>{{ avi.id }}</td>
        <td>{{ avi.seanceid.id }}</td>
        <td>{{ avi.commentaire }}</td>
        <td>{{ avi.note }}</td>

        <!-- Colonne actions avec bouton Delete -->
        <td>
            <!-- Formulaire Delete -->
            <form action="{{ path('app_avis_delete', {'id': avi.id}) }}" method="post" style="display:inline;">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ avi.id) }}">
                  <input type="hidden" name="returnTo" value="{{ app.request.uri }}">
                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('ÃŠtes-vous sÃ»r de vouloir supprimer cet avis ?')">Delete</button>
            </form>
        </td>
    </tr>
{% endfor %}

