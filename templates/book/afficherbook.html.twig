{% extends 'base.html.twig' %}

{% block title %}Liste des Livres{% endblock %}

{% block body %}
    <h1>Liste des Livres</h1>

    {% if books is empty %}
        <p>Aucun livre disponible.</p>
    {% else %}
        <table class="table">
            <thead>
                <tr>
                    <th>Référence</th>
                    <th>Titre</th>
                    <th>Date</th>
                    <th>Statut</th>
                    <th>Auteur</th>
                </tr>
            </thead>
            <tbody>
                {% for book in books %}
                    <tr>
                        <td>{{ book.ref }}</td>
                        <td>{{ book.title }}</td>
                        <td>{{ book.date ? book.date|date('Y-m-d') : 'N/A' }}</td>
                        <td>{{ book.enabled ? 'Actif' : 'Inactif' }}</td>
                        <td>{{ book.author ? book.author.id : 'Aucun' }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
    
    <a href="{{ path('Book_ajout') }}" class="btn btn-primary">Ajouter un Livre</a>
    
{% endblock %}
