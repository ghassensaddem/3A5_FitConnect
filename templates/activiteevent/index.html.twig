            <!-- Main Content -->
         <div class="main-content" style="margin-left: 260px;">

                <h1>Liste des Activités</h1>

                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Horaire</th>
                            <th>Nombre de participants</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for activiteevent in activiteevents %}
                            <tr>
                                <td>{{ activiteevent.id }}</td>
                                <td>{{ activiteevent.horaire }}</td>
                                <td>{{ activiteevent.nbrparticipant }}</td>
                                <td>
                                    <a href="{{ path('app_activiteevent_show', {'id': activiteevent.id}) }}" class="btn btn-sm btn-info">Voir</a>
                                    <a href="{{ path('app_activiteevent_edit', {'id': activiteevent.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4" class="text-center">Aucun enregistrement trouvé</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>

                <a href="{{ path('app_activiteevent_new') }}" class="btn-new">Créer une nouvelle activité</a>
            </div>
        </div>
