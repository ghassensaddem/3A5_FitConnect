{% extends 'base.html.twig' %}

{% block title %}Edit Activiteevent{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-lg border-primary">
                    <div class="card-header bg-custom-green text-white text-center">
     <h2>Edit Activiteevent</h2>
                    </div>
                    <div class="card-body">
                        <form method="POST" action="{{ path('app_activiteevent_edit', {'id': activiteevent.id}) }}">
                            {{ include('activiteevent/_form.html.twig', {'button_label': 'Update'}) }}
                        </form>
                    </div>
                    <div class="card-footer text-center">
                        <a href="{{ path('app_activiteevent_index') }}" class="btn btn-outline-primary">
                            <i class="bi bi-arrow-left-circle"></i> Back to list
                        </a>
                    </div>
                </div>

                <div class="mt-3 text-center">
                    {{ include('activiteevent/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>

    {# Custom CSS #}
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .card {
            background-color: #f8f9fa;
            border-radius: 10px;
            border: none;
        }

        .custom-header {
    background-color: #053536; /* Mets la couleur exacte de ta sidebar */
    color: #F1F2F6; /* Texte en blanc */
    padding: 15px 20px; /* Ajuste l'espacement */
    display: flex;
    align-items: center;
    justify-content: space-between; /* Ajuste le contenu */
    box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1); /* Optionnel : ajoute une ombre légère */
}

        .card-body {
            font-size: 1.1rem;
            color: #495057;
        }

        .btn-outline-primary {
            border-color: #007bff;
            color: #007bff;
        }

        .btn-outline-primary:hover {
            background-color: #007bff;
            color: white;
        }

        .card-footer {
            background-color: #f8f9fa;
        }

        .container {
            max-width: 1200px;
        }
.bg-custom-green {
    background-color: #053536 !important; /* Même couleur que la sidebar */
}

        .mt-3 {
            margin-top: 1rem;
        }
    </style>
{% endblock %}
