{% extends 'base.html.twig' %}

{% block title %}Modifier Planning - FitConnect{% endblock %}

{% block body %}
<div class="main-content">
    <div class="bg-fullscreen"></div>
    <div class="overlay"></div>

    <div class="container centered-form">
        <div class="form-container">
            <div class="text-center">
                <h1 class="h4 text-gray-900 mb-4">Modifier Planning d'Activité</h1>
            </div>
            
            {{ form_start(form, {'attr': {'class': 'user'}}) }}
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.activity, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.activity, {'attr': {
                                'class': 'form-control form-control-user select2',
                                'placeholder': 'Sélectionner une activité'
                            }}) }}
                            {{ form_errors(form.activity) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.salle, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.salle, {'attr': {
                                'class': 'form-control form-control-user select2',
                                'placeholder': 'Sélectionner une salle'
                            }}) }}
                            {{ form_errors(form.salle) }}
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.capacityMax, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.capacityMax, {'attr': {
                                'class': 'form-control form-control-user',
                                'placeholder': 'Capacité maximale',
                                'min': 1
                            }}) }}
                            {{ form_errors(form.capacityMax) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.nombreInscription, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.nombreInscription, {'attr': {
                                'class': 'form-control form-control-user',
                                'placeholder': 'Nombre d\'inscriptions',
                                'min': 0
                            }}) }}
                            {{ form_errors(form.nombreInscription) }}
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a href="{{ path('app_planning_activity_index') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left mr-2"></i> Retour à la liste
                    </a>
                    <div>
                        <a href="{{ path('app_planning_activity_show', {
                            'activityId': planning_activity.activity.idActivity,
                            'salleId': planning_activity.salle.idSalle
                        }) }}" 
                           class="btn btn-info mr-2">
                            <i class="fas fa-eye mr-2"></i> Voir
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save mr-2"></i> Enregistrer
                        </button>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>

<style>
    .centered-form {
        position: relative;
        z-index: 1;
        max-width: 800px;
        margin: 100px auto;
    }
    .form-container {
        background: white;
        padding: 40px;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
    }
    .bg-fullscreen {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: url('{{ asset("images/gym-bg.jpg") }}') no-repeat center center;
        background-size: cover;
        z-index: -2;
    }
    .overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0,0,0,0.5);
        z-index: -1;
    }
    .select2-container--default .select2-selection--single {
        height: calc(1.5em + 0.75rem + 2px) !important;
        padding: 0.375rem 0.75rem !important;
    }
</style>
{% endblock %}

{% block js %}
{{ parent() }}
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

<script>
$(document).ready(function() {
    // Initialisation de Select2
    $('.select2').select2({
        theme: 'bootstrap4',
        width: '100%'
    });

    // Validation du nombre d'inscriptions
    $('form').on('submit', function() {
        const capacity = parseInt($('#{{ form.capacityMax.vars.id }}').val());
        const inscriptions = parseInt($('#{{ form.nombreInscription.vars.id }}').val());
        
        if (inscriptions > capacity) {
            alert('Le nombre d\'inscriptions ne peut pas dépasser la capacité maximale');
            return false;
        }
        return true;
    });
});
</script>
{% endblock %}