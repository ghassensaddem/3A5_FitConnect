{% extends 'front.html.twig' %}

{% block title %}Forum{% endblock %}

{% block body %}
       <main>
    <div class="slider-area2">
        <div class="slider-height2 d-flex align-items-center">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="hero-cap hero-cap2 pt-70 text-center">
                            <h2>Modifier le Post</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <section class="contact-section">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h2 class="contact-title">Modifiez les Données</h2>
                </div>
                <div class="col-lg-8">
                    {# Début du formulaire de modification #}
{{ form_start(form, {
    attr: {
        class: 'form-contact contact_form',
        enctype: 'multipart/form-data'
    }
}) }}

{# Afficher l'image actuelle si elle existe #}
<div id="currentImage" class="mb-4">
    {% if post.image %}
        <h4>Image actuelle:</h4>
        <img id="postImage" src="{{ asset('uploads/images/' ~ post.image) }}" alt="Image du post" width="500" style="border-radius: 10px;">
    {% else %}
        <h4>Aucune image actuelle</h4>
    {% endif %}
</div>

<div class="form-group">
    {{ form_widget(form.contenu, {
        attr: {
            class: 'form-control w-100',
            placeholder: 'Contenu (minimum 10 caractères)',
            rows: 9
        }
    }) }}
    
    {{ form_errors(form.contenu) }}
</div>

<div class="form-group">
    {{ form_widget(form.imageFile, {
        attr: {
            class: 'media-body',
            onchange: 'previewImage(event)' 
        }
    }) }}
   
    {{ form_errors(form.imageFile) }}
</div>

<div class="form-group mt-3">
    <button type="submit" class="button button-contactForm boxed-btn">Sauvegarder</button>
</div>

{{ form_end(form) }}
{# Fin du formulaire #}
                </div>
                <div class="col-lg-3 offset-lg-1">
                    <div class="media contact-info">
                        <span class="contact-info__icon"><i class="ti-home"></i></span>
                        <div class="media-body">
                            <h3>esprit, Ariana </h3>
                            <p>Rosemead, CA 91770</p>
                        </div>
                    </div>
                    <div class="media contact-info">
                        <span class="contact-info__icon"><i class="ti-tablet"></i></span>
                        <div class="media-body">
                            <h3>+1 253 565 2365</h3>
                            <p>Mon to Fri 9am to 6pm</p>
                        </div>
                    </div>
                    <div class="media contact-info">
                        <span class="contact-info__icon"><i class="ti-email"></i></span>
                        <div class="media-body">
                            <h3>FitConnect@gmail.com</h3>
                            <p>Send us your query anytime!</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
{% endblock %}