   <script>
    // Fonction pour envoyer un test d'upvote (voteType = 1)
    function upvotePost(postId) {
        fetch(`/post/${postId}/vote_post/1`, { // Utilisation de la nouvelle route
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ voteType: 1 }) // Envoie type = 1
        })
        .then(response => response.json())
        .then(data => {
            if (data.error) {
                alert(data.error);
                return;
            }
            // Mettre à jour l'affichage des votes
            document.getElementById(`upvotes-${postId}`).textContent = data.upvotes;
            document.getElementById(`downvotes-${postId}`).textContent = data.downvotes;
        })
        .catch(error => console.error('Erreur de l\'upvote (test):', error));
    }

    // Fonction pour envoyer un test de downvote (voteType = -1)
    function downvotePost(postId) {
        fetch(`/post/${postId}/vote_post/-1`, { // Utilisation de la nouvelle route
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ voteType: -1 }) // Envoie type = -1
        })
        .then(response => response.json())
        .then(data => {
            if (data.error) {
                alert(data.error);
                return;
            }
            // Mettre à jour l'affichage des votes
            document.getElementById(`upvotes-${postId}`).textContent = data.upvotes;
            document.getElementById(`downvotes-${postId}`).textContent = data.downvotes;
        })
        .catch(error => console.error('Erreur du downvote (test):', error));
    }
</script>


