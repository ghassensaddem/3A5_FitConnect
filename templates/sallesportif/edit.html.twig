{% extends 'base.html.twig' %}

{% block title %}Modifier Salle de Sport - FitConnect{% endblock %}

{% block body %}
<div class="main-content">
    <div class="bg-fullscreen"></div>
    <div class="overlay"></div>

    <div class="container centered-form">
        <div class="form-container">
            <div class="text-center">
                <h1 class="h4 text-gray-900 mb-4">Modifier Salle de Sport</h1>
            </div>
            
            {{ form_start(form, {'attr': {'class': 'user'}}) }}
                <div class="form-group">
                    {{ form_label(form.nomSalle, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.nomSalle, {'attr': {
                        'class': 'form-control form-control-user',
                        'placeholder': 'Nom de la salle'
                    }}) }}
                    {{ form_errors(form.nomSalle) }}
                </div>
                
                <div class="form-group">
                    {{ form_label(form.addresseSalle) }}
                    {{ form_widget(form.addresseSalle, {
                        'attr': {
                            'class': 'form-control form-control-user select2'
                        }
                    }) }}
                    {{ form_errors(form.addresseSalle) }}
                </div>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.horaireOuverture, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.horaireOuverture, {'attr': {
                                'class': 'form-control form-control-user timepicker'
                            }}) }}
                            {{ form_errors(form.horaireOuverture) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.horaireFermeture, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.horaireFermeture, {'attr': {
                                'class': 'form-control form-control-user timepicker'
                            }}) }}
                            {{ form_errors(form.horaireFermeture) }}
                        </div>
                    </div>
                </div>
                
                <div class="form-group">
                    {{ form_label(form.capacity, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.capacity, {'attr': {
                        'class': 'form-control form-control-user',
                        'placeholder': 'Capacité maximale'
                    }}) }}
                    {{ form_errors(form.capacity) }}
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a href="{{ path('app_sallesportif_index') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left mr-2"></i> Retour à la liste
                    </a>
                    <div>
                        <a href="{{ path('app_sallesportif_show', {'idSalle': sallesportif.idSalle}) }}" 
                           class="btn btn-info mr-2">
                            <i class="fas fa-eye mr-2"></i> Voir
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save mr-2"></i> Enregistrer
                        </button>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>

<style>
    .centered-form {
        position: relative;
        z-index: 1;
        max-width: 800px;
        margin: 100px auto;
    }
    .form-container {
        background: white;
        padding: 40px;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
    }
    .bg-fullscreen {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: url('{{ asset("images/gym-bg.jpg") }}') no-repeat center center;
        background-size: cover;
        z-index: -2;
    }
    .overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0,0,0,0.5);
        z-index: -1;
    }
    .timepicker {
        cursor: pointer;
    }
</style>
{% endblock %}

{% block js %}
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

<script>
$(document).ready(function() {
    // Initialisation de Select2
    $('.select2').select2({
        theme: 'bootstrap4',
        width: '100%'
    });

    // Initialisation des timepickers
    $('.timepicker').on('click', function() {
        $(this).attr('type', 'time');
    });
});
</script>
{% endblock %}