}

.profile-icon:hover {
    color: #0b8c73;
}

/* Menu déroulant caché par défaut */
.profile-dropdown .dropdown-menu {
    display: none;
    position: absolute;
    right: 0;
    top: 100%;
    background-color: #fff;
    border: 1px solid #ccc;
    border-radius: 8px;
    min-width: 160px;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    z-index: 1000;
    padding: 10px 0;
}

/* Affiche le menu au survol */
.profile-dropdown:hover .dropdown-menu {
    display: block;
}

/* Chaque élément de menu */
.dropdown-menu li {
    list-style: none;
}

/* Lien personnalisé dans le menu */
.logout-link {
    display: block;
    padding: 10px 20px;
