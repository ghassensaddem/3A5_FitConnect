{% extends 'front.html.twig' %}

{% block body %}

<div class="slider-area2">
            <div class="slider-height2 d-flex align-items-center">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="hero-cap hero-cap2 text-center pt-70">
                                <h2>our Services</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% block stylesheets %}
    <style>
        /* Conteneur des boutons - Espacement augmenté */
        .categories-container {
            display: flex;
            flex-wrap: nowrap;
            overflow-x: auto;
            gap: 20px;
            margin-top: 30px;
            margin-bottom: 20px;
            padding-bottom: 10px; /* Espace pour la barre de défilement */
            -webkit-overflow-scrolling: touch; /* Smooth scrolling sur iOS */
        }

        /* Boutons XXL */
        .wantToWork-btn {
            background: #ff1313;
            color: white;
            border: none;
            padding: 20px 40px; /* Taille TRÈS augmentée */
            font-weight: 700;
            text-transform: uppercase;
            border-radius: 50px; /* Bords ultra arrondis */
            transition: all 0.3s ease;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
            text-decoration: none;
            font-size: 18px; /* Texte plus grand */
            letter-spacing: 1.2px;
            min-width: 150px; /* Largeur minimale importante */
            text-align: center;
            line-height: 1.3;
        }

        /* Effet survol majeur */
        .wantToWork-btn:hover {
            background: #e60000;
            transform: translateY(-5px) scale(1.05);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
        }

        /* Responsive tablette */
        @media (max-width: 992px) {
            .categories-container {
                gap: 25px;
                justify-content: center;
            }
            
            .wantToWork-btn {
                padding: 18px 36px;
                font-size: 17px;
                min-width: 140px;
            }
        }

        /* Responsive mobile */
        @media (max-width: 768px) {
            .categories-container {
                gap: 20px;
            }
            
            .wantToWork-btn {
                padding: 16px 32px;
                font-size: 16px;
                min-width: 130px;
                border-radius: 45px;
            }
        }

        /* Très petits écrans */
        @media (max-width: 480px) {
            .categories-container {
                gap: 15px;
            }
            
            .wantToWork-btn {
                padding: 14px 28px;
                font-size: 15px;
                min-width: 120px;
            }
        }

       .wantToWork-btn.active {
            background: #e60000;
            transform: scale(1.05);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
        }

         .categories-container a {
            white-space: nowrap;
            flex: 0 0 auto;
        }
         .categories-container::-webkit-scrollbar {
            display: none;
        }
         @media (max-width: 768px) {
            .categories-container {
                gap: 15px;
            }
        }
    </style>
{% endblock %}

<section class="wantToWork-area w-padding">
    <div class="container">
        <div class="row align-items-end justify-content-between">
            <div class="col-lg-6 col-md-10 col-sm-10">
                <div class="section-tittle section-tittle2">
                    <span>OUR SERVICES FOR YOU</span>
                    <h2>PUSH YOUR LIMITS FORWARD We Offer to you</h2>
                </div>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-8">
    <div class="categories-container" style="overflow-x: auto; white-space: nowrap; flex-wrap: nowrap;">
        <a href="{{ path('test_front') }}" 
           class="btn wantToWork-btn category-btn {% if selectedCategory is null %}active{% endif %}" 
           style="display: inline-block; float: none;">
            All Categories
        </a>
        {% for category in categories %}
            <a href="{{ path('category_activities', {'id': category.idCategorie}) }}" 
               class="btn wantToWork-btn category-btn {% if selectedCategory == category.idCategorie %}active{% endif %}" 
               style="display: inline-block; float: none;">
                {{ category.nomCategorie }}
            </a>
        {% endfor %}
    </div>
</div>
        </div>
    </div>
</section>

<section class="services-area pt-100 pb-150 section-bg" data-background="{{asset('img/gallery/section_bg01.png')}}">
    <div class="container">
        <div class="row">
            {% if activities is defined and activities is not empty %}
                {% for activity in activities %}
                <div class="col-lg-4 col-md-4 col-sm-6">
                    <div class="single-cat text-center mb-50">
                        <div class="cat-icon">
                            <img src="{{ asset('uploads/images/' ~ activity.iconActivity) }}" 
                                 alt="{{ activity.nomActivity }}" 
                                 style="width: 70px; height: 70px; object-fit: contain;">
                        </div>
                        <div class="cat-cap">
                            <h5><a href="{{ path('activity_salle', {'id': activity.idActivity}) }}">
                                {{ activity.nomActivity }}
                            </a></h5>
                            <p>{{ activity.categorieActivity.description|default('Description not available') }}</p>
                        </div>
                        <div class="img-cap">
                            <a href="{{ path('activity_salle', {'id': activity.idActivity}) }}" class="">
                                Discover More <i class="ti-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
                {% endfor %}
            {% else %}
                <div class="col-12 text-center">
                    <p class="text-muted">No activities available in this category.</p>
                </div>
            {% endif %}
        </div>
    </div>
</section>


{% endblock %}