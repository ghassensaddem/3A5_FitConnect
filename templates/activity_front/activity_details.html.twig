{% extends 'front.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .activity-details-container {
            background: white;
            border-radius: 10px;
            padding: 40px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            margin-top: 30px;
        }
        .activity-icon-large {
            width: 120px;
            height: 120px;
            object-fit: contain;
            margin-bottom: 25px;
        }
    </style>
{% endblock %}

{% block body %}
<div class="slider-area2">
    <div class="slider-height2 d-flex align-items-center">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="hero-cap hero-cap2 text-center pt-70">
                        <h2>{{ activity.nomActivity }}</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="services-area pt-100 pb-150 section-bg" data-background="{{asset('img/gallery/section_bg01.png')}}">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="activity-details-container text-center">
                    <div class="cat-icon">
                        <img src="{{ asset('uploads/icons/' ~ activity.iconActivity) }}" 
                             alt="{{ activity.nomActivity }}" 
                             class="activity-icon-large">
                    </div>
                    
                    <div class="cat-cap">
                        <h2 class="mb-4">{{ activity.nomActivity }}</h2>
                        <p class="mb-5">{{ activity.description }}</p>
                        
                        {% if activity.categorieActivity %}
                            <div class="category-info mt-5">
                                <h4>Catégorie: {{ activity.categorieActivity.nomCategorie }}</h4>
                                <p>{{ activity.categorieActivity.description }}</p>
                            </div>
                        {% endif %}
                    </div>
                    
                    <div class="img-cap mt-5">
                        <a href="{{ path('test_front') }}" class="btn wantToWork-btn">
                            Retour aux activités <i class="ti-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}