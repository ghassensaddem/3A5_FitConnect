{% block body %}

<!-- Floating Background Elements -->
<div class="floating-elements">
    <div class="floating-circle" style="width: 300px; height: 300px; top: 10%; left: 5%; animation-delay: 0s;"></div>
    <div class="floating-circle" style="width: 200px; height: 200px; top: 70%; left: 80%; animation-delay: 3s;"></div>
    <div class="floating-circle" style="width: 150px; height: 150px; top: 30%; left: 60%; animation-delay: 6s;"></div>
    <div class="floating-circle" style="width: 250px; height: 250px; top: 80%; left: 20%; animation-delay: 9s;"></div>
</div>

<div class="container">
    <div class="order-header">
        <div class="back-btn" onclick="redirectToEquipements()">
            <i class="fas fa-arrow-left"></i>
        </div>
        <div class="status-badge processing">
            <i class="fas fa-clock"></i> En traitement
        </div>
    </div>
    
    <h1 class="order-title">Votre Commande Exclusive</h1>
    
    <div class="order-info-grid">
        <div class="info-card">
            <h3><i class="fas fa-calendar-alt"></i> Date de commande</h3>
            <p>{{ dateCommande|date('d M Y') }}</p>
        </div>
        <div class="info-card">
            <h3><i class="fas fa-truck"></i> Livraison prévue</h3>
            <p>{{ dateCommande|date_modify('+5 days')|date('d M Y') }}</p>
        </div>
        <div class="info-card">
            <h3><i class="fas fa-user"></i> Client</h3>
            <p>{{ client.email }}</p>
        </div>
        <div class="info-card">
            <h3><i class="fas fa-file-invoice"></i> N° de commande</h3>
            <p>CMD-{{ commandes[0].id }}-{{ dateCommande|date('Ymd') }}</p>
        </div>
    </div>
    
    <div class="delivery-progress">
        <h3 class="progress-title">Suivi de Votre Livraison</h3>
        <div class="progress-steps">
            <div class="progress-bar"></div>
            <div class="step completed">
                <div class="step-icon">
                    <i class="fas fa-check"></i>
                </div>
                <div class="step-label">Confirmée</div>
            </div>
            <div class="step completed">
                <div class="step-icon">
                    <i class="fas fa-box"></i>
                </div>
                <div class="step-label">Préparation</div>
            </div>
            <div class="step active">
                <div class="step-icon">
                    <i class="fas fa-shipping-fast"></i>
                </div>
                <div class="step-label">Expédiée</div>
            </div>
            <div class="step">
                <div class="step-icon">
                    <i class="fas fa-home"></i>
                </div>
                <div class="step-label">Livrée</div>
            </div>
        </div>
    </div>
    
    <div class="products-container">
        <div class="products-header">
            <i class="fas fa-box-open"></i> Vos Articles
        </div>
        <table class="products-table">
            <thead>
                <tr>
                    <th style="width: 45%;">Produit</th>
                    <th style="width: 20%;">Prix unitaire</th>
                    <th style="width: 15%;">Quantité</th>
                    <th style="width: 20%;">Total</th>
                </tr>
            </thead>
            <tbody>
                {% for commande in commandes %}
                {% if commande.equipement %}
                <tr>
                    <td>
                        <div class="product-info">
                            <img src="{{ asset('uploads/images/' ~ commande.equipement.image) }}" alt="{{ commande.equipement.nom }}" class="product-img">
                            <div>
                                <div class="product-name">{{ commande.equipement.nom }}</div>
                                <div class="product-sku">Description: {{ commande.equipement.description }}</div>
                            </div>
                        </div>
                    </td>
                    <td>{{ commande.equipement.prix }} DT</td>
                    <td>
                        <span class="quantity-badge">{{ commande.quantite }}</span>
                    </td>
                    <td><strong>{{ commande.equipement.prix * commande.quantite }} DT</strong></td>
                </tr>
                {% endif %}
                {% endfor %}
            </tbody>
        </table>
    </div>
    
    <div class="order-summary">
        <h3 class="summary-title"><i class="fas fa-receipt"></i> Récapitulatif</h3>
        <div class="summary-row">
            <span>Sous-total</span>
            <span>{{ total }} DT</span>
        </div>
        <div class="summary-row">
            <span>Livraison Express</span>
            <span>Gratuite</span>
        </div>
        <div class="summary-row">
            <span>Total</span>
            <span style="color: var(--primary-dark); font-size: 1.6rem;">{{ total }} DT</span>
        </div>
    </div>
    
    <div class="action-buttons">
            <a href="{{ path('app_commande_pdf') }}" class="btn btn-outline" id="pdf-btn">
    <i class="fas fa-file-pdf"></i> Télécharger Facture
</a>
         <form action="/checkout" method="POST">
        <button type="submit" class="btn btn-primary">Checkout</button>
    </form>
       
    </div>
</div>
{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Montserrat:wght@400;600&display=swap" rel="stylesheet">
<style>
:root {
            --primary-color: #d62b2b;
            --primary-light: #ff6b6b;
            --primary-dark: #a71c1c;
            --secondary-color: #2b2d42;
            --accent-color: #f8d7da;
            --light-color: #fff9f9;
            --dark-color: #2b2d42;
            --text-light: #ffffff;
            --text-dark: #2b2d42;
            --border-radius: 16px;
            --box-shadow: 0 15px 30px rgba(214, 43, 43, 0.15);
            --transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
        }
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Montserrat', sans-serif;
            background: linear-gradient(135deg, #fff9f9 0%, #ffefef 100%);
            color: var(--text-dark);
            line-height: 1.7;
            min-height: 100vh;
        }
        
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 3rem 2rem;
        }
        
        /* Header */
        .order-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 3rem;
            position: relative;
        }
        
        .back-btn {
            font-size: 1.8rem;
            color: var(--primary-color);
            cursor: pointer;
            transition: var(--transition);
            background: white;
            width: 50px;
            height: 50px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 5px 15px rgba(214, 43, 43, 0.1);
        }
        
        .back-btn:hover {
            color: white;
            background: var(--primary-color);
            transform: translateX(-5px);
        }
        
        .order-title {
            font-family: 'Playfair Display', serif;
            font-size: 2.8rem;
            color: var(--primary-dark);
            font-weight: 700;
            text-align: center;
            margin-bottom: 2rem;
            position: relative;
            letter-spacing: 1px;
        }
        
        .order-title::after {
            content: '';
            display: block;
            width: 120px;
            height: 4px;
            background: linear-gradient(90deg, var(--primary-color), var(--primary-light));
            margin: 1rem auto;
            border-radius: 2px;
        }
        
        /* Order Status */
        .order-status {
            background: white;
            border-radius: var(--border-radius);
            padding: 2rem;
            margin-bottom: 3rem;
            box-shadow: var(--box-shadow);
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-left: 6px solid var(--primary-color);
            transform: translateY(0);
            transition: var(--transition);
        }
        
        .order-status:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 40px rgba(214, 43, 43, 0.2);
        }
        
        .status-badge {
            padding: 0.8rem 1.5rem;
            border-radius: 30px;
            font-weight: 600;
            font-size: 1.1rem;
            letter-spacing: 1px;
        }
        
        .status-badge.processing {
            background: linear-gradient(135deg, var(--primary-light), var(--primary-dark));
            color: white;
            box-shadow: 0 5px 15px rgba(214, 43, 43, 0.3);
        }
        
        /* Order Info */
        .order-info-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 2rem;
            margin-bottom: 3rem;
        }
        
        .info-card {
            background: white;
            border-radius: var(--border-radius);
            padding: 2rem;
            box-shadow: var(--box-shadow);
            transition: var(--transition);
            position: relative;
            overflow: hidden;
            z-index: 1;
        }
        
        .info-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 4px;
            height: 100%;
            background: var(--primary-color);
            transition: var(--transition);
            z-index: -1;
        }
        
        .info-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(214, 43, 43, 0.2);
        }
        
        .info-card:hover::before {
            width: 100%;
            opacity: 0.1;
        }
        
        .info-card h3 {
            font-size: 1rem;
            color: var(--primary-dark);
            margin-bottom: 0.8rem;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .info-card p {
            font-size: 1.2rem;
            font-weight: 600;
            color: var(--dark-color);
        }
        
        /* Products Table */
        .products-container {
            background: white;
            border-radius: var(--border-radius);
            overflow: hidden;
            box-shadow: var(--box-shadow);
            margin-bottom: 3rem;
            transition: var(--transition);
        }
        
        .products-container:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 40px rgba(214, 43, 43, 0.2);
        }
        
        .products-header {
            background: linear-gradient(135deg, var(--primary-dark), var(--primary-color));
            color: white;
            padding: 1.5rem 2rem;
            font-family: 'Playfair Display', serif;
            font-size: 1.5rem;
            letter-spacing: 1px;
        }
        
        .products-table {
            width: 100%;
            border-collapse: collapse;
        }
        
        .products-table thead {
            background: var(--light-color);
        }
        
        .products-table th {
            padding: 1.5rem;
            text-align: left;
            font-weight: 600;
            color: var(--primary-dark);
            border-bottom: 2px solid var(--accent-color);
        }
        
        .products-table td {
            padding: 1.5rem;
            border-bottom: 1px solid var(--accent-color);
            vertical-align: middle;
        }
        
        .products-table tr:last-child td {
            border-bottom: none;
        }
        
        .products-table tr:hover td {
            background: rgba(214, 43, 43, 0.03);
        }
        
        .product-info {
            display: flex;
            align-items: center;
        }
        
        .product-img {
            width: 80px;
            height: 80px;
            border-radius: 12px;
            object-fit: cover;
            margin-right: 1.5rem;
            border: 1px solid var(--accent-color);
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
            transition: var(--transition);
        }
        
        .product-img:hover {
            transform: scale(1.05);
            box-shadow: 0 10px 20px rgba(214, 43, 43, 0.2);
        }
        
        .product-name {
            font-weight: 700;
            margin-bottom: 0.5rem;
            color: var(--dark-color);
        }
        
        .product-sku {
            font-size: 0.9rem;
            color: var(--primary-dark);
            opacity: 0.8;
        }
        
        .quantity-badge {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 40px;
            height: 40px;
            background: var(--accent-color);
            border-radius: 50%;
            font-weight: 700;
            color: var(--primary-dark);
        }
        
        /* Order Summary */
        .order-summary {
            background: white;
            border-radius: var(--border-radius);
            padding: 2rem;
            box-shadow: var(--box-shadow);
            margin-bottom: 3rem;
            transition: var(--transition);
        }
        
        .order-summary:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 40px rgba(214, 43, 43, 0.2);
        }
        
        .summary-title {
            font-family: 'Playfair Display', serif;
            font-size: 1.8rem;
            color: var(--primary-dark);
            margin-bottom: 1.5rem;
            padding-bottom: 1rem;
            border-bottom: 2px solid var(--accent-color);
        }
        
        .summary-row {
            display: flex;
            justify-content: space-between;
            padding: 1rem 0;
            border-bottom: 1px solid var(--accent-color);
        }
        
        .summary-row:last-child {
            border-bottom: none;
            font-weight: 700;
            font-size: 1.4rem;
            color: var(--primary-dark);
            margin-top: 1rem;
            padding-top: 1.5rem;
        }
        
        /* Delivery Progress */
        .delivery-progress {
            background: white;
            border-radius: var(--border-radius);
            padding: 2rem;
            box-shadow: var(--box-shadow);
            margin-bottom: 3rem;
            transition: var(--transition);
        }
        
        .delivery-progress:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 40px rgba(214, 43, 43, 0.2);
        }
        
        .progress-title {
            font-family: 'Playfair Display', serif;
            font-size: 1.8rem;
            color: var(--primary-dark);
            margin-bottom: 2rem;
        }
        
        .progress-steps {
            display: flex;
            justify-content: space-between;
            position: relative;
            margin-top: 3rem;
        }
        
        .progress-steps::before {
            content: '';
            position: absolute;
            top: 25px;
            left: 0;
            right: 0;
            height: 6px;
            background: var(--accent-color);
            z-index: 1;
            border-radius: 3px;
        }
        
        .progress-bar {
            position: absolute;
            top: 25px;
            left: 0;
            height: 6px;
            background: linear-gradient(90deg, var(--primary-light), var(--primary-dark));
            z-index: 2;
            width: 50%;
            border-radius: 3px;
            transition: width 1.5s ease-in-out;
        }
        
        .step {
            display: flex;
            flex-direction: column;
            align-items: center;
            z-index: 3;
            width: 25%;
        }
        
        .step-icon {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background: white;
            border: 3px solid var(--accent-color);
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 1rem;
            color: var(--primary-dark);
            font-size: 1.2rem;
            transition: var(--transition);
            box-shadow: 0 5px 15px rgba(214, 43, 43, 0.1);
        }
        
        .step.active .step-icon {
            border-color: var(--primary-color);
            background: var(--primary-color);
            color: white;
            transform: scale(1.1);
        }
        
        .step.completed .step-icon {
            border-color: var(--primary-color);
            background: var(--primary-color);
            color: white;
        }
        
        .step-label {
            font-size: 0.9rem;
            color: var(--primary-dark);
            text-align: center;
            font-weight: 600;
            opacity: 0.7;
            transition: var(--transition);
        }
        
        .step.active .step-label,
        .step.completed .step-label {
            opacity: 1;
            color: var(--primary-dark);
            font-weight: 700;
        }
        
        /* Action Buttons */
        .action-buttons {
            display: flex;
            justify-content: center;
            gap: 2rem;
            margin-top: 3rem;
        }
        
        .btn {
            padding: 1.2rem 2.5rem;
            border-radius: 50px;
            font-weight: 600;
            cursor: pointer;
            transition: var(--transition);
            border: none;
            display: inline-flex;
            align-items: center;
            gap: 1rem;
            font-size: 1.1rem;
            letter-spacing: 1px;
            position: relative;
            overflow: hidden;
            z-index: 1;
        }
        
        .btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, var(--primary-light), var(--primary-dark));
            z-index: -1;
            transition: var(--transition);
            opacity: 0;
        }
        
        .btn:hover::before {
            opacity: 1;
        }
        
        .btn-primary {
            background: linear-gradient(135deg, var(--primary-dark), var(--primary-color));
            color: white;
            box-shadow: 0 10px 20px rgba(214, 43, 43, 0.3);
        }
        
        .btn-primary:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(214, 43, 43, 0.4);
        }
        
        .btn-outline {
            background: white;
            color: var(--primary-dark);
            border: 2px solid var(--primary-color);
            box-shadow: 0 5px 15px rgba(214, 43, 43, 0.1);
        }
        
        .btn-outline:hover {
            color: white;
            border-color: var(--primary-dark);
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(214, 43, 43, 0.2);
        }
        
        /* Floating Elements */
        .floating-elements {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: -1;
            overflow: hidden;
        }
        
        .floating-circle {
            position: absolute;
            border-radius: 50%;
            background: rgba(214, 43, 43, 0.05);
            animation: float 15s infinite linear;
        }
        
        @keyframes float {
            0% {
                transform: translateY(0) rotate(0deg);
            }
            100% {
                transform: translateY(-1000px) rotate(720deg);
            }
        }
        
        /* Responsive */
        @media (max-width: 992px) {
            .order-info-grid {
                grid-template-columns: repeat(2, 1fr);
            }
            
            .progress-steps {
                flex-wrap: wrap;
                gap: 2rem;
            }
            
            .step {
                width: calc(50% - 1rem);
                margin-bottom: 2rem;
            }
        }
        
        @media (max-width: 768px) {
            .container {
                padding: 2rem 1.5rem;
            }
            
            .order-title {
                font-size: 2.2rem;
            }
            
            .order-info-grid {
                grid-template-columns: 1fr;
            }
            
            .action-buttons {
                flex-direction: column;
                gap: 1.5rem;
            }
            
            .btn {
                width: 100%;
                justify-content: center;
            }
            
            .product-info {
                flex-direction: column;
                align-items: flex-start;
            }
            
            .product-img {
                margin-right: 0;
                margin-bottom: 1rem;
            }
        }

</style>
{% endblock %}
<script>
function redirectToEquipements() {
    window.location.href = '{{ path("app_equipement_front") }}';
}



</script>