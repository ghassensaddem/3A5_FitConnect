<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Liste des événements</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ asset('css/custom.css') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
     <style>
    /* Solution complète pour l'en-tête */
    table.table thead.thead-custom {
        background-color: #053536 !important;
        --bs-table-bg: #053536 !important; /* Pour Bootstrap 5 */
        --bs-table-color: #F1F2F6 !important; /* Couleur du texte */
    }
    
    /* Style spécifique pour les cellules */
    table.table thead.thead-custom th {
        color: #F1F2F6 !important;
        border-color: #042a2a !important;
    }
    
    /* Style au survol (optionnel) */
    table.table thead.thead-custom th:hover {
        color: white !important;
    }
</style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="sidebar">
                {% include '_sidebar.html.twig' %}
            </nav>

            <!-- Contenu principal -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 mt-4">
                <h1 class="text-center mb-4">Liste des événements</h1>

                <table class="table table-bordered table-striped">
                    <thead class="thead-custom">
                        <tr>
                            <th>ID</th>
                            <th>Date</th>
                            <th>Prix du pass</th>
                            <th>Lieu</th>
                            <th>Horaire</th>
                            <th>Image</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for event in events %}
                            <tr>
                                <td>{{ event.id }}</td>
                                <td>{{ event.date|date('Y-m-d') }}</td>
                                <td>{{ event.prixdupass }} TND</td>
                                <td>{{ event.lieu }}</td>
                                <td>{{ event.horaire }}</td>
                                <td>
                                    {% if event.image %}
                                        <img src="{{ asset(event.image) }}" alt="Image de l'événement" width="100">
                                    {% else %}
                                        <span class="text-muted">Pas d'image</span>
                                    {% endif %}
                                </td>
                               <td class="text-center">
    <div class="custom-btn-container">
        <a href="{{ path('app_event_show', {'id': event.id}) }}" class="btn btn-primary btn-sm custom-btn">
            <i class="fa fa-eye"></i> Afficher
        </a>
        <a href="{{ path('app_event_edit', {'id': event.id}) }}" class="btn btn-warning btn-sm custom-btn">
            <i class="fa fa-edit"></i> Modifier
        </a>
    </div>
</td>

                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7" class="text-center text-muted">Aucun événement trouvé</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>

                <div class="d-flex justify-content-between">
                    <a href="{{ path('app_event_new') }}" class="btn btn-success">
                        <i class="fas fa-plus"></i> Créer un nouvel événement
                    </a>
                    <a href="{{ path('event_list') }}" class="btn btn-info">
                        <i class="fas fa-globe"></i> Voir Front
                    </a>
                </div>
            </main>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
