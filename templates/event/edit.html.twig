{% extends 'base.html.twig' %}

{% block title %}Edit Event{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-lg border-primary">
                    <div class="card-header bg-custom-green text-white text-center">
                        <h2>Edit Event</h2>
                    </div>
                    <div class="card-body">
                        <form method="POST" action="{{ path('app_event_new') }}" enctype="multipart/form-data">
    {{ form_start(form) }}

    <div class="mb-3">
        {{ form_label(form.date, 'Date de l\'événement') }}
        {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.date) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.prixdupass, 'Prix du Pass') }}
        {{ form_widget(form.prixdupass, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.prixdupass) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.lieu, 'Lieu') }}
        {{ form_widget(form.lieu, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.lieu) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.horaire, 'Horaire') }}
        {{ form_widget(form.horaire, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.horaire) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.image, 'Image de l\'événement') }}
        {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.image) }}
    </div>

    <button type="submit" class="btn btn-primary">Créer l'événement</button>

    {{ form_end(form) }}
</form>
                    </div>
                    <div class="card-footer text-center">
                        <a href="{{ path('app_event_index') }}" class="btn btn-outline-primary">
                            <i class="bi bi-arrow-left-circle"></i> Back to list
                        </a>
                    </div>
                </div>

                <div class="mt-3 text-center">
                    {{ include('event/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>

    {# Custom CSS #}
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .card {
            background-color: #f8f9fa;
            border-radius: 10px;
            border: none;
        }

        .custom-header {
    background-color: #053536; /* Mets la couleur exacte de ta sidebar */
    color: #F1F2F6; /* Texte en blanc */
    padding: 15px 20px; /* Ajuste l'espacement */
    display: flex;
    align-items: center;
    justify-content: space-between; /* Ajuste le contenu */
    box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1); /* Optionnel : ajoute une ombre légère */
}
        .card-body {
            font-size: 1.1rem;
            color: #495057;
        }

        .btn-outline-primary {
            border-color: #007bff;
            color: #007bff;
        }

        .btn-outline-primary:hover {
            background-color: #007bff;
            color: white;
        }

        .card-footer {
            background-color: #f8f9fa;
        }
.bg-custom-green {
    background-color: #053536 !important; /* Même couleur que la sidebar */
}

        .container {
            max-width: 1200px;
        }

        .mt-3 {
            margin-top: 1rem;
        }
    </style>
{% endblock %}
